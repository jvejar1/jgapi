<p id="notice"><%= notice %></p>

<h1>Acases</h1>

<table>
  <thead>
    <tr>
      <th>Ace</th>
      <th>Index</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @acases.each do |acase| %>
      <tr>
        <td><%= link_to image_tag(acase.image.url, class: 'media-object'), acase.image.url, target: '_blank' %></td>
        <td><%= acase.ace %></td>
        <td><%= acase.index %></td>
        <td><%= link_to 'Show', acase %></td>
        <td><%= link_to 'Edit', edit_acase_path(acase) %></td>
        <td><%= link_to 'Destroy', acase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

