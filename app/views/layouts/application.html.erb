<!DOCTYPE html>
<html>
  <head>
    <title>Api</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


  <div id="nav-bar">
   
      <span><a class="active" href=<%=download_csv_url%>>Evaluaciones</a></span>
      <%if current_user
          if current_user.can_admin_users?%>
          <span><%=link_to 'Usuarios',users_url%></span>
          <span><%=link_to 'Colegios',schools_url%></span>
          <span><%=link_to 'Cursos',courses_url%></span>

          <span><%=link_to 'Estudios', studies_url%></span>

    <%end%>
        <!--<li><%=link_to 'Log Out',destroy_user_session_url(current_user),method: :delete, data: {confirm:'¿Está seguro/a?'}%></li-->
      <%end%>    

  </div>

    <div class="container" style="margin-top: 2%">
      <% flash.each do |key, value| %>
            <div class="<%=flash_class(key)%>"><%= value %></div>
      <% end %>
    <%= yield %>

    </div>
  </body>
</html>


<style>

  body{
    background: #f0f3f8;
  }

  #nav-bar{
    background-color: #333;
    padding-top:10px;
    padding-bottom:10px;
    padding-left:10px;
  }

  #nav-bar>span{
    padding: 10px 20px 10px 0px;
  }
  
  #nav-bar>span>a{
    color:#ffffff
  }

 
</style>
